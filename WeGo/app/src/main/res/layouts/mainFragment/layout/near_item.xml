<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="150dp"
    android:background="#fff">

    <TextView
        android:id="@+id/nearName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="肯德基肯德基肯德基肯德基"
        android:maxLength="10"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="23dp"
        android:src="@drawable/actionbar_loc"
        android:layout_alignTop="@+id/nearCity"
        android:layout_marginStart="275dp"
        android:id="@+id/imageView11"
        android:layout_alignBottom="@+id/nearCity"/>

    <TextView
        android:id="@+id/nearCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话："
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/textView7"/>

    <TextView
        android:id="@+id/nearPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678910"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址："
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/nearAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京交通大学主校区"
        android:maxLines="2"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="70dp"/>

</RelativeLayout>