    <RelativeLayout
        android:id="@+id/yj_dialog_rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_below="@id/yj_toolbar">

        <EditText
            android:id="@+id/yj_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="给你的游记起个名字吧"
            android:maxLines="1"
            android:shadowColor="@color/green"
            />

        <ScrollView
            android:id="@+id/yj_sv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scrollbars="none"
            android:layout_below="@id/yj_title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/yj_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="165dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="分享你的旅程..."
                    android:textCursorDrawable="@color/green"
                    android:cursorVisible="true">
                </EditText>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/addyjbk"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@id/yj_sv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="取消"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="20sp"/>


