<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wego.mainFragment.MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:clipChildren="false">


        <android.support.v4.view.ViewPager
            android:id="@+id/mainViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            app:layout_constraintRight_toLeftOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"

            />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
           >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image1_white"/>

                    <ImageView
                        android:id="@+id/item_home"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:scaleType="centerInside"

                        app:srcCompat="@drawable/magichat"/>

                    <ImageView
                        android:id="@+id/mHomeGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:scaleType="centerInside"
                        android:tint="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/magichatgreen"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主页"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image2_white"/>

                    <ImageView
                        android:id="@+id/item_nearby"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/mylocation"/>

                    <ImageView
                        android:id="@+id/mNearbyGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:scaleType="centerInside"
                        android:tint="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/mylocationgreen"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image3_white"/>

                    <ImageView
                        android:id="@+id/mTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/go"
                        />

                    <ImageView
                        android:id="@+id/mTravelGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"

                        android:gravity="center_horizontal|center_vertical"

                        android:scaleType="centerInside"
                        android:src="@drawable/go"
                        android:tint="@android:color/transparent"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="行程"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image4_white"/>

                    <ImageView
                        android:id="@+id/mFind"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"

                        android:tint="@android:color/transparent"
                        android:gravity="center_horizontal|center_vertical"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/lightbulb"/>

                    <ImageView
                        android:id="@+id/mFindGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        android:tint="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/greenbulb"
                        android:scaleType="centerInside"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/image5_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/mUser"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/personfile"/>

                    <ImageView
                        android:id="@+id/mUserGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        android:tint="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/personfilegreen"
                        android:scaleType="centerInside"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="我的"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
