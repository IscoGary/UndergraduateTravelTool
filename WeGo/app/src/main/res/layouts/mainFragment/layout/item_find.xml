<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/selector_elevation"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/yj_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/wuhan"/>

            <TextView
                android:id="@+id/yj_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="这里是一篇游记的标题"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_alignBottom="@id/yj_cover"/>

            <TextView
                android:id="@+id/yj_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:lineSpacingMultiplier="1.2"
                android:text="这里可以是用户自定义的介绍语\n也可以默认选取前几句话。"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_below="@id/yj_cover"/>

            <com.wego.mainFragment.CheckedImageView
                android:id="@+id/btn_dianzan"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_below="@id/yj_content"
                android:src="@drawable/dianzan"/>

            <TextView
                android:id="@+id/num_dianzan"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/btn_dianzan"
                android:layout_below="@id/yj_content"
                android:layout_marginTop="20dp"/>


            <com.wego.mainFragment.CheckedImageView
                android:id="@+id/btn_love"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toRightOf="@id/num_dianzan"
                android:layout_below="@id/yj_content"
                android:scaleType="fitXY"
                android:src="@drawable/love"/>

            <TextView
                android:id="@+id/num_love"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/btn_love"
                android:layout_below="@id/yj_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"/>

            <!--<ImageView-->
                <!--android:id="@+id/btn_findcomment"-->
                <!--android:layout_width="28dp"-->
                <!--android:layout_height="28dp"-->
                <!--android:src="@drawable/findcomment"-->
                <!--android:layout_toRightOf="@id/num_love"-->
                <!--android:layout_marginTop="14dp"-->
                <!--android:layout_marginRight="18dp"-->
                <!--android:layout_alignBaseline="@id/btn_dianzan"-->
                <!--android:layout_below="@id/yj_content"-->
                <!--android:scaleType="fitXY"/>-->

            <com.wego.userActivity.CircleImageView
                android:id="@+id/yjwriter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/wuhan"
                android:layout_below="@id/yj_cover"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
