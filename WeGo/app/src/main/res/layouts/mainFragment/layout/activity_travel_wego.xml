<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wego.mainFragment.TravelWegoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e4e5e6"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/goButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e4e5e6"
            android:text="GO"
            android:textSize="25sp"
            android:layout_alignBottom="@+id/chooseCityImgBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            android:id="@+id/chooseCityImgBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/actionbar_loc"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/chooseCity"
            android:layout_toStartOf="@+id/chooseCity"/>

        <ImageButton
            android:id="@+id/backButt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/backwhite"/>

        <TextView
            android:id="@+id/chooseCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择城市"
            android:textSize="25sp"/>


    </RelativeLayout>

    <SearchView
        android:id="@+id/searchSpotView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="#ffffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff">

            <TextView
                android:id="@+id/locationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="在上方搜索你想去的地方"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/locationabout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationname"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="点击右侧按钮加入行程"
                android:textSize="15sp"/>

            <com.wego.userActivity.CircleImageView
                android:id="@+id/maptestadd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"

                android:layout_marginRight="20dp"
                android:layout_marginTop="-25dp"
                android:src="@drawable/fpj"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>