<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wego.mainFragment.CityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_x="-1dp"
        android:layout_y="0dp"
        android:background="#e4e5e6">

        <ImageButton
            android:id="@+id/cancelButt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/backwhite"/>

        <TextView
            android:id="@+id/chooseCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择城市"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="0dp"
        android:layout_y="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/imageViewBeijing"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/beijing"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="BEIJING"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>



            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">




                <ImageView
                    android:id="@+id/imageViewDali"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dali"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DALI"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大理"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">



                <ImageView
                    android:id="@+id/imageViewWuhan"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wuhan"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="WUHAN"
                        android:textSize="25dp"

                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="武汉"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
                </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/imageViewGuanGzhou"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"

                    android:scaleType="fitXY"
                    android:src="@drawable/guangdong"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="GUANGDONG"
                        android:textSize="25dp"

                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广东"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">



                <ImageView
                    android:id="@+id/imageViewHangzhou"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"
                    android:scaleType="fitXY"
                    android:src="@drawable/hangzhou"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HANGZHOU"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杭州"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">



                <ImageView
                    android:id="@+id/imageViewanhui"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"
                    android:scaleType="fitXY"
                    android:src="@drawable/anhui"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ANHUI"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安徽"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">



                <ImageView
                    android:id="@+id/imageViewDalian"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"
                    android:scaleType="fitXY"
                    android:src="@drawable/dalian"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="DALIAN"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大连"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">



                <ImageView
                    android:id="@+id/imageViewhongkong"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"
                    android:scaleType="fitXY"
                    android:src="@drawable/hongkong"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="HONGKONG"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="香港"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>
                </LinearLayout>
            </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/imageViewMoreCity"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="0.36"
                    android:scaleType="fitXY"
                    android:src="@drawable/morecities"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</AbsoluteLayout>
