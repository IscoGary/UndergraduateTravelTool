<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wego.userActivity.PersonInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e4e5e6">

        <ImageButton
            android:id="@+id/pBack"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/backwhite"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_x="0dp"
        android:layout_y="61dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/headLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true">
            <!--android:onClick="onClickHead">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="头像"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/cat"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="昵称"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourName"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sexLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onViewClicked">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="性别"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourSex"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/birthLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onViewClicked">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="年龄"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourAge"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/teleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onViewClicked">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourPhone"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addrLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onViewClicked">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="地址"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourAddr"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signatureLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onViewClicked">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="个性签名"
                android:textSize="20sp"/>

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/enter"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="yourSignature"/>

        </RelativeLayout>

    </LinearLayout>

</AbsoluteLayout>
