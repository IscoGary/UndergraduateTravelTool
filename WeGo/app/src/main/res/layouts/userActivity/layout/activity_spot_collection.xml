<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wego.userActivity.userCollection.SpotCollectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e4e5e6">

        <ImageButton
            android:id="@+id/pBack"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/backwhite"/>

        <TextView
            android:id="@+id/chooseCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="收藏景点"
            android:textSize="20sp"/>
    </RelativeLayout>

    <com.wego.userActivity.userCollection.SCRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spotCollectionView">

    </com.wego.userActivity.userCollection.SCRecyclerView>



</LinearLayout>
