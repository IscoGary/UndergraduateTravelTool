<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context="com.wego.userActivity.SMSLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e4e5e6">

        <ImageButton
            android:id="@+id/cancelButt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/backwhite"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="120dp"
        android:text="WeGo登录"
        android:textSize="30sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_x="43dp"
        android:layout_y="196dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_x="43dp"
            android:layout_y="196dp"
            android:hint="手机号码"
            android:inputType="number"
            android:background="#FFFFFF"
            android:maxLength="11"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputCode"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_x = "43dp"
        android:layout_y = "250dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:hint="短信验证码"
            android:inputType="number"
            android:layout_x = "42dp"
            android:layout_y = "250dp"
            android:background = "#FFFFFF" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/loginButt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="登 录"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:color = "#ff8800"
        android:layout_x="42dp"
        android:layout_y ="300dp"/>



    <Button
        android:id="@+id/btn_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="242dp"
        android:layout_y="248dp"
        android:color="#ff8800"
        android:enabled="true"
        android:text="获取验证码"/>



</AbsoluteLayout>