<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              >
    <LinearLayout
        android:id="@+id/SCllLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewTpic"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/loading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textViewspotName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:maxLines="1"
        android:layout_above="@+id/imageButtonAdd1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageViewTpic"
        android:layout_toRightOf="@+id/imageViewTpic"/>

    <TextView
        android:id="@+id/SCline1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/imageViewTpic"
        android:layout_alignBottom="@+id/imageViewTpic"/>

    <TextView
        android:id="@+id/editTextIntro1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:ems="10"
        android:gravity="left|top"
        android:focusable="false"
        android:layout_marginLeft="10dp"

        android:maxLines="2"
        android:inputType="textMultiLine"
        android:layout_above="@+id/SCline1"
        android:layout_toRightOf="@+id/imageViewTpic"
        />
        </RelativeLayout>

        <TextView
            android:id="@+id/SCDelete"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:background="#ff0000"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/delete"/>


    </LinearLayout>
</RelativeLayout>
