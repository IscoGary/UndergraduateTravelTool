<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/imageViewpic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textSpotName"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:text=""
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_alignTop="@+id/imageViewpic"
                android:layout_toRightOf="@+id/imageViewpic"
                android:layout_toEndOf="@+id/imageViewpic"/>

            <TextView
                android:id="@+id/textSpotAddr"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:text=""
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_below="@+id/textSpotName"
                android:layout_toRightOf="@+id/imageViewpic"
                android:layout_toEndOf="@+id/imageViewpic"
                />

            <TextView
                android:id="@+id/textSpotPhone"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:text="电话"
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/imageViewpic"
                android:layout_toRightOf="@+id/imageViewpic"
                />

            <TextView
                android:id="@+id/textSpotPost"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:text="邮编"
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_alignBottom="@+id/textSpotPhone"
                android:layout_toRightOf="@+id/textSpotPhone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d4d8d4"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/top"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/delete"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>



    </LinearLayout>
</RelativeLayout>

