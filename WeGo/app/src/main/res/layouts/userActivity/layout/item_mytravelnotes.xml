<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/MTNcv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/selector_elevation"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:id="@+id/MTNllLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/MTNyj_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/wuhan"/>

            <TextView
                android:id="@+id/MTNyj_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_alignBottom="@id/yj_cover"/>

            <TextView
                android:id="@+id/MTNyj_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_below="@id/MTNyj_cover"/>

            <ImageView
                android:id="@+id/MTNbtn_dianzan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dianzan"
                android:layout_below="@id/MTNyj_content"/>

            <TextView
                android:id="@+id/MTNnum_dianzan"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/MTNbtn_dianzan"
                android:layout_below="@id/MTNyj_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"/>




            <ImageView
                android:id="@+id/MTNbtn_love"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/love"
                android:layout_toRightOf="@id/MTNnum_dianzan"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/MTNyj_content"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/MTNnum_love"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignBaseline="@+id/MTNnum_dianzan"
                android:layout_alignBottom="@+id/MTNnum_dianzan"
                android:layout_toRightOf="@+id/MTNbtn_love"
                android:layout_toEndOf="@+id/MTNbtn_love"/>

            <ImageView
                android:id="@+id/MTNbtn_findcomment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/findcomment"
                android:layout_toRightOf="@id/MTNnum_love"
                android:layout_marginTop="14dp"
                android:layout_marginRight="18dp"
                android:layout_alignBaseline="@id/MTNbtn_dianzan"
                android:layout_below="@id/MTNyj_content"
                android:scaleType="fitXY"/>

            <com.wego.userActivity.CircleImageView
                android:id="@+id/MTNyjwriter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/wuhan"
                android:layout_below="@id/MTNyj_cover"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

            <TextView
                android:id="@+id/MTNDelete"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:gravity="center_vertical|fill_horizontal"
                android:text="@string/delete"/>

            <!--<TextView-->
            <!--android:id="@+id/MTNTop"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#d4d8d4"-->
            <!--android:text="@string/top" />-->

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
